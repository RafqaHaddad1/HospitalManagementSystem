            </div>
        </div>
    </div>
    

    <script>
      
        $(document).ready(function () {
            FillTable();
    
        });
        function FillTable() {
            $.ajax({
                url: '/Laboratory/AllLabs',
                type: 'GET',
                success: function (response) {
                    console.log(response);
                    if (response.success) {
                        const tbody = document.querySelector("#Laboratory-table tbody");
                        const template = document.querySelector("#LabRowTemplate");
                        tbody.innerHTML = '';  // Clear existing rows
                        // Use response.model instead of model
                        response.model.forEach(item => {
                            console.log(item);
                            if ("content" in document.createElement("template")) {
                                const clone = template.content.cloneNode(true);
                                // Fill in the data
                                clone.querySelector(".result-id").textContent = item.resultID;
                                clone.querySelector(".test-name").textContent = item.testType;
                                clone.querySelector(".requested-by").textContent = item.requestedBy || "N/A";
                                clone.querySelector(".request-date").textContent = item.requestedDate || "N/A";
                                clone.querySelector(".result-date").textContent = item.resultDate || "N/A";
                                clone.querySelector(".view-lab").setAttribute("onclick", `fetchRequestDetails('${item.resultID}')`);
                                clone.querySelector(".submit-result").setAttribute("onclick", `fetchDepartmentDetails('${item.resultID}')`);
                                // Append the new row to the table body
                                tbody.appendChild(clone);
                            } else {
                                console.error("HTML template elements are not supported in this browser.");
                            }
                        });
                        // Destroy existing DataTable instance before reinitializing (to prevent reinitialization issues)
                        if ($.fn.DataTable.isDataTable('#Laboratory-table')) {
                            $('#Laboratory-table').DataTable().destroy();
                        }
                        // Reinitialize DataTable after rows are added
                        $('#Laboratory-table').DataTable();
                    } else {
                        alert("Failed to fetch Laboratory data.");
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error: " + error);
                }
            });
        }

        function fetchRequestDetails(id) {
            $.ajax({
                url: '/Laboratory/LabByID/' + id,
                type: 'GET',
                success: function (response) {
                    console.log(response);
                    if (response.success) {
                        var lab = response.model[0]; // Assuming model is an array, access the first element
                        // Populate the modal fields with data from the response
                        $('#LabID').val(lab.resultID);
                        $('#PatientID').val(lab.patientID);
                        $('#RequestedDate').val(lab.requestedDate);
                
                        // Test Type checkboxes
                        $('input[name="TestType"]').prop('checked', false); // Uncheck all checkboxes first
                        if (lab.testType) {
                            $('input[name="TestType"][value="' + lab.testType + '"]').prop('checked', true);
                        }

                        // Sample Submitted checkboxes
                        $('input[name="SampleSubmitted"]').prop('checked', false); // Uncheck all checkboxes first
                        if (lab.sampleSubmitted) {
                            $('input[name="SampleSubmitted"][value="' + lab.sampleSubmitted + '"]').prop('checked', true);
                        }
                        $("#ViewLabModal").modal('show');
                    } else {
                        alert("Failed to fetch lab data.");
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error: " + error);
                }
            });
        }

    </script>
</body>
