                                <div class="checkbox-item">
                                <input type="checkbox" id="TestType4" name="TestType" value="Basic metabolic panel" disabled>
                                    <label for="TestType4">Basic Metabolic Panel</label>
                                </div>
                                <div class="checkbox-item">
                                <input type="checkbox" id="TestType5" name="TestType" value="Cancer testing" disabled>
                                    <label for="TestType5">Cancer Testing</label>
                                </div>
                                <div class="checkbox-item">
                                <input type="checkbox" id="TestType6" name="TestType" value="Genetic testing" disabled>
