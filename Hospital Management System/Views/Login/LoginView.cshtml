﻿
@{
   
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Hospital Management System</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f4f7;
        }

        .Login-Full {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 100vh;
        }

        .Login-Logo {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #44444c;
            height: 100%;
        }

        .Login-Logo img {
            max-width: 80%;
            max-height: 80%;
            object-fit: contain;
        }

        .Login-Box {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .Login-Card {
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 30px;
            width: 400px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .Login-Head h1 {
            color: #44444c;
            margin-bottom: 10px;
        }

        .Login-Head p {
            font-size: 14px;
            color: #666;
            margin-bottom: 20px;
        }

        .Form-cont {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
            color: #44444c;
        }

        input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        input:focus {
            border-color: #44444c;
            outline: none;
        }

        .Log-Button {
            background-color: #44444c;
            color: white;
            font-size: 16px;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

        .Log-Button:hover {
            background-color: #33333a;
        }

    </style>

</head>
<body>
    <div class="Login-Full">
        <div class="Login-Logo">
            <img src="@Url.Content("../Images/Logo.jpg")" alt="Hospital Logo">
        </div>

        <div class="Login-Box">
            <div class="Login-Card">
                <div class="Login-Head">
                    <h1>Welcome</h1>
                    <p>Please log in to access the CodeZillas Hospital Management System</p>
                </div>
                <form id="Login-Form">
                    <div class="Form-cont">
                        <label for="username">Username</label>
                        <input type="text" id="username" placeholder="Enter your username" required>
                    </div>
                    <div class="Form-cont">
                        <label for="password">Password</label>
                        <input type="password" id="password" placeholder="Enter your password" required>
                    </div>
                    <div class="Form-cont">
                        <button type="submit" class="Log-Button">Log In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
